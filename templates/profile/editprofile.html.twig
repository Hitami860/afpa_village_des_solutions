            }) }}
	</div>
	<div class="mb-6">
		{{ form_row(form.website, {
              'label': 'Site Web',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-300'}
            }) }}
	</div>
    <div class="mb-6">
		{{ form_row(form.logo, {
              'label': 'Logo entreprise',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-300'}
            }) }}
	</div>
