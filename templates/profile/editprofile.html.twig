{% extends 'base.html.twig' %}

{% block title %}Editer le profil -
	{{app.user.partner.name}}
{% endblock %}

{% block body %}

	<h2 class="text-xl font-semibold pt-[5%] text-center">Modifier les informations de votre profil</h2>

	{{ form_start(form) }}


    <div class="mb-6">
		{{ form_row(form.name, {
              'label': 'Nom',
                'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-300'}
            }) }}
	</div>
	<div class="mb-6">
		{{ form_row(form.description, {
              'label': 'Description',
